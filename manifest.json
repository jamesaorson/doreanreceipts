{
    "name": "Dorean Receipt Printer",
    "description": "Used to get #doreancon tweets from x.com",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_icon": "img/dorean.png"
    },
    "permissions": [
        "activeTab",
        "nativeMessaging",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/search?q=doreancon*"
            ],
            "js": [
                "scripts/scrape.js"
            ],
            "run_at": "document_idle"
        }
    ]
}